{
  "swagger": "2.0",
  "info": {
    "version": "1.0",
    "title": "Daljinac API",
    "description": "## Dobrodosli u dokumentaciju API-a projekta Daljinac"
  },
  "host": "daljinac-api.herokuapp.com",
  "schemes": ["https"],
  "consumes": "application/json",
  "produces": "application/json",
  "paths": {
    "/users": {
      "get": {
        "operationId": "GET_users",
        "summary": "Dohvatnje svih korisnika",
        "tags": ["tagUSER"],
        "responses": {
          "200": {
            "description": "Dobar zahtev",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/user"
              }
            }
          }
        }
      },
      "post": {
        "operationId": "POST_user",
        "summary": "Pravljenje novog korisnika",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "$ref": "#/definitions/user",
              "example": {
                "username": "KorisnickoIme",
                "password": "lozinka123",
                "email": "korisnik@gmail.com"
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Uspesno kreiran korisnik",
            "schema": {
              "$ref": "#/definitions/user"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "user": {
      "title": "user",
      "allOf": [
        {
          "type": "object",
          "properties": {
            "_id": {
              "type": "string"
            },
            "username": {
              "type": "string"
            },
            "password": {
              "type": "string"
            },
            "email": {
              "type": "string"
            },
            "rooms": {
              "type": "array"
            }
          },
          "required": ["_id", "username", "password", "email", "rooms"]
        }
      ]
    },
    "room": {
      "title": "rooms",
      "allOf": [
        {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "deviceID": {
              "type": "number"
            }
          },
          "required": ["name", "deviceID"]
        }
      ]
    }
  }
}
